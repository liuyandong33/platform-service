<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="build.dream.platform.mappers.SystemUserMapper">
    <insert id="insert" parameterType="build.dream.common.saas.domains.SystemUser" useGeneratedKeys="true" keyProperty="id">
        ${@build.dream.common.utils.BeanUtils@generateInsertSql("build.dream.common.saas.domains.SystemUser")}
    </insert>

    <update id="update" parameterType="build.dream.common.saas.domains.SystemUser">
        ${@build.dream.common.utils.BeanUtils@generateUpdateSql("build.dream.common.saas.domains.SystemUser")}
    </update>

    <select id="findByLoginNameOrEmailOrMobile" resultType="build.dream.common.saas.domains.SystemUser">
        SELECT * FROM system_user WHERE (login_name = #{loginName} OR email = #{loginName} OR mobile = #{loginName}) AND deleted = 0
    </select>

    <select id="findAll" parameterType="build.dream.common.utils.SearchModel" resultType="build.dream.common.saas.domains.SystemUser">
        SELECT * FROM system_user <include refid="build.dream.platform.mappers.CommonMapper.searchConditionSql"></include>
    </select>

    <select id="findAllPaged" parameterType="build.dream.common.utils.SearchModel" resultType="build.dream.common.saas.domains.SystemUser">
        SELECT * FROM system_user <include refid="build.dream.platform.mappers.CommonMapper.searchConditionSql"></include> <include refid="build.dream.platform.mappers.CommonMapper.paginationSql"></include>
    </select>
</mapper>