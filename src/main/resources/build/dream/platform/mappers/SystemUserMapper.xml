<mapper namespace="build.dream.platform.mappers.SystemUserMapper">
    <insert id="insert" parameterType="build.dream.common.saas.domains.SystemUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO system_user()
        VALUES ()
    </insert>

    <update id="update" parameterType="build.dream.common.saas.domains.SystemUser">
        UPDATE system_user
        SET
        WHERE id = #{id}
    </update>

    <select id="findByLoginNameOrEmailOrMobile" resultType="build.dream.common.saas.domains.SystemUser">
        SELECT * FROM system_user WHERE (login_name = #{loginName} OR email = #{loginName} OR mobile = #{loginName}) AND deleted = 0
    </select>
</mapper>