<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="build.dream.platform.mappers.DataDefinitionMapper">
    <update id="createTable">
        CREATE TABLE ${tableName}
        <foreach collection="columnDescribes" index="index" item="columnDescribe" open="(" separator="," close=")">
            ${columnDescribe}
        </foreach>
    </update>

    <update id="createTableWithTemplate">
        CREATE TABLE ${tableName} AS SELECT * FROM ${templateTableName} WHERE 1 = 2
    </update>

    <update id="truncateTable">
        TRUNCATE ${tableName}
    </update>
</mapper>