<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="build.dream.platform.mappers.WeiXinPublicAccountMapper">
    <insert id="insert" parameterType="build.dream.common.saas.domains.WeiXinPublicAccount" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO wei_xin_public_account (tenant_id, branch_id, name,
        app_id, app_secret, original_id,
        create_user_id, last_update_user_id, last_update_remark)
        VALUES (#{tenantId}, #{branchId}, #{name},
        #{appId}, #{appSecret}, #{originalId},
        #{createUserId}, #{lastUpdateUserId}, #{lastUpdateRemark})
    </insert>

    <update id="update" parameterType="build.dream.common.saas.domains.WeiXinPublicAccount">
        UPDATE wei_xin_public_account
        SET tenant_id = #{tenantId},
        branch_id = #{branchId},
        name = #{name},
        app_id = #{appId},
        app_secret = #{appSecret},
        original_id = #{originalId},
        last_update_user_id = #{lastUpdateUserId},
        last_update_remark = #{lastUpdateRemark},
        deleted = #{deleted}
    </update>

    <select id="find" parameterType="build.dream.common.utils.SearchModel" resultType="build.dream.common.saas.domains.WeiXinPublicAccount">
        SELECT * FROM wei_xin_public_account <include refid="searchConditionSql"></include>
    </select>

    <sql id="searchConditionSql">
        WHERE
        <foreach collection="searchConditions" index="index" item="searchCondition" separator=" AND ">
            <choose>
                <when test="@org.apache.commons.lang.StringUtils@equalsIgnoreCase(searchCondition.operationSymbol, 'IN')">
                    ${searchCondition.columnName} ${searchCondition.operationSymbol}
                    <foreach collection="searchCondition.searchParameter" index="index" item="item" open="(" separator="," close=")">
                        #{item}
                    </foreach>
                </when>
                <otherwise>
                    ${searchCondition.columnName} ${searchCondition.operationSymbol} #{searchCondition.searchParameter}
                </otherwise>
            </choose>
        </foreach>
    </sql>
</mapper>