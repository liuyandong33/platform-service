<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="build.dream.platform.mappers.BackgroundRoleMapper">
    <select id="findAllPaged" parameterType="build.dream.common.utils.SearchModel" resultType="build.dream.common.saas.domains.BackgroundRole">
        SELECT * FROM background_role <include refid="build.dream.platform.mappers.CommonMapper.searchConditionSql"></include> <include refid="build.dream.platform.mappers.CommonMapper.paginationSql"></include>
    </select>

    <select id="count" parameterType="build.dream.common.utils.SearchModel" resultType="long">
        SELECT COUNT(1) FROM background_role <include refid="build.dream.platform.mappers.CommonMapper.searchConditionSql"></include>
    </select>

    <delete id="deleteRolePrivileges">
        DELETE FROM background_role_privilege_r WHERE background_role_id = ${roleId}
    </delete>

    <insert id="saveRolePrivileges">
        INSERT INTO background_role_privilege_r(background_role_id, privilege_id)
        VALUES
        <foreach collection="privilegeIds" index="index" item="privilegeId" separator=",">
            (#{roleId}, #{privilegeId})
        </foreach>
    </insert>
</mapper>