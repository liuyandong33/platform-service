<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="build.dream.platform.mappers.AppRoleMapper">
    <delete id="deleteRolePrivileges">
        DELETE FROM app_role_privilege_r WHERE app_role_id = ${roleId}
    </delete>

    <insert id="saveRolePrivileges">
        INSERT INTO app_role_privilege_r(app_role_id, privilege_id)
        VALUES
        <foreach collection="privilegeIds" index="index" item="privilegeId" separator=",">
            (#{roleId}, #{privilegeId})
        </foreach>
    </insert>

    <select id="listRolePrivileges" resultType="build.dream.common.domains.saas.AppPrivilege">
        SELECT * FROM app_privilege WHERE id IN (SELECT privilege_id FROM app_role_privilege_r WHERE app_role_id = #{roleId}) AND deleted = 0
    </select>
</mapper>