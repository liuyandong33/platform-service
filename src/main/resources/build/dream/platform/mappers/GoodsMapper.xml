<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="build.dream.platform.mappers.GoodsMapper">
    <insert id="insert" parameterType="build.dream.common.saas.domains.Goods" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO goods(name, goods_type, goods_status,
        goods_photo_url, metering_mode, create_user_id,
        last_update_user_id, last_update_remark)
        VALUES (#{name}, #{goodsType}, #{goodsStatus},
        #{goodsPhotoUrl}, #{meteringMode}, #{createUserId},
        #{lastUpdateUserId}, #{lastUpdateRemark})
    </insert>

    <update id="update" parameterType="build.dream.common.saas.domains.Goods">
        UPDATE goods
        SET name = #{name},
        goods_type = #{goodsType},
        goods_status = #{goodsStatus},
        goods_photo_url = #{goodsPhotoUrl},
        metering_mode = #{meteringMode},
        create_user_id = #{createUserId},
        last_update_user_id = #{lastUpdateUserId},
        last_update_remark = #{lastUpdateRemark},
        deleted = #{deleted}
        WHERE id = #{id}
    </update>

    <select id="find" parameterType="build.dream.common.utils.SearchModel" resultType="build.dream.common.saas.domains.Goods">
        SELECT * FROM goods <include refid="searchConditionSql"></include>
    </select>

    <select id="findAll" parameterType="build.dream.common.utils.SearchModel" resultType="build.dream.common.saas.domains.Goods">
        SELECT * FROM goods <include refid="searchConditionSql"></include>
    </select>

    <select id="findAllPaged" parameterType="build.dream.common.utils.SearchModel" resultType="build.dream.common.saas.domains.Goods">
        SELECT * FROM goods <include refid="searchConditionSql"></include> <include refid="paginationSql"></include>
    </select>

    <sql id="searchConditionSql">
        WHERE
        <foreach collection="searchConditions" index="index" item="searchCondition" separator=" AND ">
            <choose>
                <when test="@org.apache.commons.lang.StringUtils@equalsIgnoreCase(searchCondition.operationSymbol, 'IN')">
                    ${searchCondition.columnName} ${searchCondition.operationSymbol}
                    <foreach collection="searchCondition.searchParameter" index="index" item="item" open="(" separator="," close=")">
                        #{item}
                    </foreach>
                </when>
                <otherwise>
                    ${searchCondition.columnName} ${searchCondition.operationSymbol} #{searchCondition.searchParameter}
                </otherwise>
            </choose>
        </foreach>
    </sql>

    <sql id="paginationSql">
        LIMIT #{offset}, #{maxResults}
    </sql>

    <select id="count" parameterType="build.dream.common.utils.SearchModel" resultType="java.lang.Long">
        SELECT COUNT(1) FROM goods <include refid="searchConditionSql"></include>
    </select>
</mapper>